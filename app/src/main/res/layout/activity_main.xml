<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="15dp"
    android:paddingLeft="15dp"
    android:paddingRight="30dp"
    android:paddingTop="10dp"
    android:orientation="vertical"
    tools:context="com.example.dlt.taco.MainActivity">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/jellyfish"
            android:scaleType="fitXY"
            />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:layout_below="@+id/imageView"
        android:scrollbarStyle="insideInset">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >



    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:layout_below="@+id/textView1"
        android:layout_alignParentStart="true">
        <RadioButton
            android:text="Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton1"
            android:layout_weight="1"
            android:layout_marginRight="50dp"
            app:buttonTint="@android:color/holo_blue_light" />

        <RadioButton
            android:text="Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton2"
            android:layout_weight="1"
            app:buttonTint="@android:color/holo_blue_light"
            />



    </RadioGroup>

    <TextView

        android:text="Fillings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:paddingBottom="15dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:paddingTop="15dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/radioGroup2"
        android:layout_alignStart="@+id/radioGroup1"
        android:textAlignment="center"
        android:background="@drawable/border"
        android:textStyle="normal|bold" />

    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignTop="@+id/radioGroup1"
        android:layout_alignStart="@+id/textView2">


        <RadioButton
            android:text="Corn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton3"
            android:layout_weight="1"
            app:buttonTint="@android:color/holo_blue_light"
            />

        <RadioButton
            android:text="Flour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton4"
            android:layout_weight="1"
            app:buttonTint="@android:color/holo_blue_light"/>

    </RadioGroup>

    <CheckBox
        android:text="Beef"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox2"
        android:layout_below="@+id/textView3"
        app:buttonTint="@android:color/holo_blue_light" />

    <CheckBox
        android:text="Chicken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBox2"
        android:layout_alignParentStart="true"
        android:id="@+id/checkBox3"
        app:buttonTint="@android:color/holo_blue_light" />

    <CheckBox
        android:text="White Fish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBox3"
        android:layout_alignParentStart="true"
        android:id="@+id/checkBox4"
        app:buttonTint="@android:color/holo_blue_light"/>

    <CheckBox
        android:text="Cheese"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBox4"
        android:layout_alignParentStart="true"
        android:id="@+id/checkBox5"
        app:buttonTint="@android:color/holo_blue_light"/>

    <CheckBox
        android:text="Sea Food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBox5"
        android:id="@+id/checkBox6"
        app:buttonTint="@android:color/holo_blue_light"/>

    <TextView
        android:text="Tortilla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:paddingBottom="15dp"
        android:paddingLeft="55dp"
        android:paddingRight="55dp"
        android:paddingTop="15dp"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:background="@drawable/border"
        android:layout_above="@+id/radioGroup1"
        android:layout_alignParentEnd="true"
        android:textSize="14sp" />

    <CheckBox
        android:text="Rice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox7"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/radioGroup2"
        android:layout_marginTop="11dp"
        app:buttonTint="@android:color/holo_blue_light"/>

    <CheckBox
        android:text="Beans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBox7"
        android:layout_alignStart="@+id/checkBox7"
        android:id="@+id/checkBox8"
        app:buttonTint="@android:color/holo_blue_light"/>

    <CheckBox
        android:text="Pico de Gallo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBox8"
        android:layout_alignStart="@+id/checkBox8"
        android:id="@+id/checkBox9"
        app:buttonTint="@android:color/holo_blue_light"/>

    <CheckBox
        android:text="Guacamole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBox9"
        android:layout_alignStart="@+id/checkBox9"
        android:id="@+id/checkBox10"
        app:buttonTint="@android:color/holo_blue_light"/>

    <CheckBox
        android:text="LBT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBox10"
        android:layout_alignStart="@+id/checkBox10"
        android:id="@+id/checkBox11"
        app:buttonTint="@android:color/holo_blue_light"/>

    <TextView
        android:text="Size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView1"
        android:paddingBottom="15dp"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:paddingTop="15dp"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:background="@drawable/border"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Beverage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBox11"
        android:layout_marginTop="5dp"
        android:id="@+id/textView"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:background="@drawable/border"
        android:paddingBottom="15dp"
        android:paddingTop="15dp" />

    <CheckBox
        android:text="Cerveza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBox12"
        android:layout_alignStart="@+id/checkBox12"
        android:id="@+id/checkBox13"
        app:buttonTint="@android:color/holo_blue_light"/>

    <CheckBox
        android:text="Tequila"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox15"
        android:layout_below="@+id/checkBox14"
        android:layout_alignStart="@+id/checkBox14"
        app:buttonTint="@android:color/holo_blue_light"/>

    <CheckBox
        android:text="Soda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:id="@+id/checkBox12"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        app:buttonTint="@android:color/holo_blue_light"/>

    <CheckBox
        android:text="Margarita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox14"
        android:layout_marginTop="11dp"
        android:layout_alignTop="@+id/checkBox12"
        android:layout_alignStart="@+id/checkBox11"
        app:buttonTint="@android:color/holo_blue_light"/>




    <Button
        android:text="Place Your Order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textSize="20sp"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:background="@android:color/holo_blue_light"
        android:textColor="@android:color/background_light"
        android:textAllCaps="false"
        android:layout_below="@+id/checkBox15"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="30dp"/>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
